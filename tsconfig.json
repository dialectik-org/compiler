{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "declaration": true
  },
  "exclude": [
    "build",
    "src/templates/*.tsx",
    "build/templates/*.tsx"
  ]
}